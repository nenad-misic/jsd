const { secret_key } = require('../environment/environment')

const jwt = require('jsonwebtoken');

var handler = (req, res, next) => {
    let allowed_endpoints = ['/login', '/register'];
    if (allowed_endpoints.filter(e => req.url.endsWith(e)).length > 0) {
        next();
        return;
    }
    
    const authHeader = req.headers['authorization'];
    const token = authHeader && authHeader.split(' ')[1] // checks if it's undefined; [1]: Bearer + token

    if (token == null)
        return res.status(401).send('Please, sign in');

    jwt.verify(token, secret_key, (err, user) => {
        if (err)
            return res.status(403).send('Access denied :)');

        req.logged_user = user;
        next();
    })

}

module.exports = handler;
